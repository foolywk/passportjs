doctype html
html(lang='en')
  //
    =======================================================================================
      PERFECT PITCH hosted by BRUIN ENTREPRENEURS
    =======================================================================================
  head

    // Basic Page Needs
    meta(charset='utf-8')
    title Perfect Pitch
    meta(name='description', content='Perfect Pitch')
    meta(name='author', content='Brandon Foo')
    
    // Mobile Specific Metas
    meta(name='viewport', content='width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1')
    
    // CSS
    link(rel='stylesheet', href='css/reset.css', media='all')
    link(rel='stylesheet', href='css/ut-fontface.css', media='all')
    link(rel='stylesheet', href='css/font-awesome.css', media='all')
    link(rel='stylesheet', href='css/flexslider.css', media='all')
    link(rel='stylesheet', href='css/magnific-popup.css', media='all')
    link(rel='stylesheet', href='css/ut-responsive-grid.css', media='all')
    link(rel='stylesheet', href='css/color.css', media='all')
    link(rel='stylesheet', href='css/style.css', media='all')
    
    // Favicons
    link(rel='shortcut icon', href='images/favicon.ico')
    link(rel='apple-touch-icon', href='images/apple-touch-icon.png')
    link(rel='apple-touch-icon', sizes='72x72', href='images/apple-touch-icon-72x72.png')
    link(rel='apple-touch-icon', sizes='114x114', href='images/apple-touch-icon-114x114.png')
    
    // Load jQuery
    script(src='js/jquery.min.js')
    script(src='js/modernizr.js')
    script(src='js/device.min.js')
  body#mainsite
    a#top
    // Page Layout

    // header section 
    header#header-section.ha-header.ha-header
      .grid-container
        .ha-header-perspective
          .ha-header-front
            .grid-20.tablet-grid-20.hide-on-mobile
              h1.logo
                a(href='#/')
                  img(src='images/logoWhite.png', alt='logo')

            nav#ut-navigation.grid-80.tablet-grid-80.hide-on-mobile

              a.selected(href='/') Home
              a(href='#about-section') About
              a(href='#team-section') Team
              a(href='#service-section') Service
              a(href='#portfolio-section') Work
              a(href='#contact-section') Contact
              include loginButton

              // a.facebook(href='http://facebook.com/perfectpitchLA')
              // a.twitter(href='http://twitter.com/perfectpitchLA')
        // close .ha-header-perspective 
      // close grid container 
    // close header 
    .clear
    
    // hero section 
    section.hero.ha-waypoint.parallax-section.parallax-banner-1.parallax-background()
      .parallax-overlay.parallax-overlay-1
      .grid-container
        
        // hero holder 
        .hero-holder.grid-70.mobile-grid-100.tablet-grid-100
          .hero-inner
            span.hero-description 500 Pitches - 24 Finalists - $3,000+ prizes
            img.hero-logo(src='images/logoWhite.png')
            span.hero-description May 2014 - Ucla
            br
            br
            span.btn-holder
              include submitButton

      // close hero-holder 
    // close hero section 
    .clear
    #main-content.wrap
      
      // Footer Section 
      footer.footer
        a.toTop(href='#top')
          i.icon-angle-up
        .grid-container

          // ABOUT header 
          .grid-70.prefix-15.mobile-grid-100.tablet-grid-100
            header.section-header(style='padding: 0px;')
              h2.section-title ABOUT
              h2. UCLA's Biggest Pitch Competition

          .grid-100.tablet-grid-100.mobile-grid-100.about-box
            
            // ABOUT description 
            .about-box(style='color: #000000;')
              h3
              p
                span(style='font-weight: bold;') Perfect Pitch 
                | is the biggest student pitch competition at UC Los Angeles, where over 500 students will submit video business pitches in one of three categories. The top eight finalists within each category are then invited to pitch at the 
                span(style='font-weight: bold;') Perfect Pitch 
                | Finale for cash prizes. The objective is to turn UCLA into an “ideas” campus, facilitate innovative thought, and provide opportunity for entrepreneurial problem solving that is accessible to all undergraduate students.
              br

            // Presented by BE 
            .about-box
              p(style='font-size: 12px; color: #000000;') PRESENTED BY
              a(href='http://bruinentrepreneurs.org')
                img(src='http://s3-us-west-1.amazonaws.com/lahacks/bruin_entrepreneurs.jpg', style='max-width: 500px;')
      
      // Load Javascript
      script(src='js/jquery.mb.YTPlayer.js')
      script(src='js/jquery.parallax.min.js')
      script(src='js/jquery.scrollTo.min.js')
      script(src='js/waypoints.min.js')
      script(src='js/jquery.magnific-popup.min.js')
      script(src='js/jquery.custom.js')
      // End Document
