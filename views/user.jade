.user

if(user)
  // hero section 
  section.account.ha-waypoint.parallax-section.parallax-banner-1.parallax-background(style="overflow:scroll")
    .parallax-overlay.parallax-overlay-1
    .grid-container
      
      // hero holder 
      .hero-holder.grid-70.mobile-grid-100.tablet-grid-100

        .hero-inner
            h1.account-title=user.name
          .hero-title-holder
            span.hero-description User Account
            br
        .account-message
          h2.account-header.grid-100 SUBMIT A PITCH
            form( action="/upload", method="POST", enctype="multipart/form-data")
             br
             ul.grid-50
               li
                 input#name.name(type='text', name='title', placeholder='Pitch Title:')
               li
                 input#email.email(type='text', name='major', placeholder='Major:')
               li
                 input#phone.phone(type='text', name='year', placeholder='Graduation Year:')      
             ul.grid-50
               li
                 textarea#message.message(name='description', placeholder='Pitch Description: ')
             h5 Please upload your video pitch in .MOV or .MP4 format. Pitches should be approximately 1-2 minutes in length and less than 100MB in size. 
             input(type="file", name="file")     
             br
             br 
             input(type="submit", value="Submit")
             br

        each video, i in user.videos
          .grid-50
            h2.account-header=video.title
            h5=video.description
            embed(width='380', src='http://www.youtube.com/v/' + video.id + '?controls=0', type='application/x-shockwave-flash' , frameborder='0', style='margin: 10px') 

        br      
        span.btn-holder
          if(user.oauthID=706352243)
            a.hero-btn(href="/auth/google") Google Authentication        
            br
            br
          a.hero-btn(href="/logout") Logout

else 
  // hero section 
  section.hero.ha-waypoint.parallax-section.parallax-banner-1.parallax-background()
    .parallax-overlay.parallax-overlay-1
    .grid-container
      // hero holder 
      .hero-holder.grid-70.mobile-grid-100.tablet-grid-100
        .hero-inner  
          span.login-header Login to submit a pitch or view your submitted pitches. 
          br
          br  		
          a.hero-btn(href='/auth/facebook') Login With Facebook

